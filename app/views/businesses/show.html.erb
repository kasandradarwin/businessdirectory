<p style="color: green"><%= notice %></p>

<div class ="container">

<h3><%= @business.business_name  %> </h3>
<small> <%= @business.category %> </small>
<%= render @business %>
 <small>Liked by: <%= @business.likes.count %> users</small>


<div>
<% if can? :crud, @business %>
  <%= link_to "Edit this Business", edit_business_path(@business), class: 'btn btn-outline-success-dark' %> 
<% end %>
<% if current_user == @business.user %>
  <%= button_to "Delete this business", @business, method: :delete, class: 'btn btn-outline-danger' %>
<%end %>
<small>
  <% if @like.present? %>
      <%= button_to "👎 Unlike", like_path(@like), method: :delete, class: 'btn btn-outline-danger' %>
    <% else %>
      <%= button_to "👍 Like", business_likes_path(@business), method: :post, class: 'btn btn-outline-primary' %>
    <% end %>
</small>
</div>
<br>
